{% extends 'DavidBundle::base.html.twig' %}

{% block title %}{% trans %}editDiscipline.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="country">
        <h1 class="text-center">{% trans %}editDiscipline.title{% endtrans %}</h1>

        <div class="row">
            <div class="col-md-5">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <button type="submit" class="btn btn-primary">{% trans %}generic.form.submit.modify{% endtrans %}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}