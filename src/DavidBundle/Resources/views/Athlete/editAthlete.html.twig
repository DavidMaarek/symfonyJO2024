{% extends 'DavidBundle::base.html.twig' %}

{% block title %}{% trans %}editAthlete.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="country">
        <h1 class="text-center">{% trans %}editAthlete.title{% endtrans %}</h1>

        <div class="row">
            <div class="col-md-5">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.birthDate) }}
                    {{ form_widget(form.birthDate) }}
                    {{ form_errors(form.birthDate) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.picture) }}
                    {{ form_widget(form.picture) }}
                    {{ form_errors(form.picture) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.country) }}
                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.country) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.discipline) }}
                    {{ form_widget(form.discipline, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.discipline) }}
                </div>

                <button type="submit" class="btn btn-primary">{% trans %}generic.form.submit.modify{% endtrans %}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}