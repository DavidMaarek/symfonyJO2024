{% extends 'DavidBundle::base.html.twig' %}

{% block title %}{% trans %}editCountry.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="country">
        <h1 class="text-center">{% trans %}editCountry.title{% endtrans %}</h1>

        <div class="row">
            <div class="col-md-5">
                <h3>{% trans %}editcountry.formTitle{% endtrans %}</h3>

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.flag) }}
                    {{ form_widget(form.flag) }}
                    {{ form_errors(form.flag) }}
                </div>
                <button type="submit" class="btn btn-primary">{% trans %}country.form.submit{% endtrans %}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}