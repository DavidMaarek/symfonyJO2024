{% extends 'DavidBundle::base.html.twig' %}

{% block title %}{% trans %}city.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="country">
        <h1 class="text-center">{% trans %}city.title{% endtrans %}</h1>

        <div class="row container-success-message" style="display: none">
            <div class="col-md-6 col-md-push-3">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span class="success-message"></span>
                </div>
            </div>
        </div>

        <div class="row container-error-message" style="display: none">
            <div class="col-md-6 col-md-push-3">
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span class="error-form"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <h3>{% trans %}city.form.title{% endtrans %}</h3>

                <div class="injectForm"></div>
            </div>

            <div class="col-md-6 col-md-push-1">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <td>{% trans %}city.thead.name{% endtrans %}</td>
                        <td>{% trans %}generic.thead.modify{% endtrans %}</td>
                        <td>{% trans %}generic.thead.delete{% endtrans %}</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% if cities is empty %}
                        <tr class="tr_no_city">
                            <td colspan="3">
                                <div class="alert alert-danger" role="alert">
                                    {% trans %}city.noCity{% endtrans %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        {% for city in cities %}
                            <tr>
                                <td>{{ city.name|capitalize }}</td>
                                <td><a href="#" class="city_modify" data-id="{{ city.id }}" data-toggle="modal" data-target="#formModal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                <td><a href="#" class="city_delete" data-id="{{ city.id }}" data-toggle="modal" data-target="#formModal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <a href="#" style="display: block;" data-dismiss="modal" data-id="" class="city_delete_in_modal">{% trans %}confirm.suppression{% endtrans %}</a>
                </div>
                {#<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>#}
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        //Chargement du formulaire d'ajout d'une ville
        $.ajax({
            url: "{{ path('city_form', {'id': null }) }}",
            type: 'GET',
            success: function (result) {
                $(".injectForm").html(result);
            }
        });

        //Ajout d'une ville
        //Detection de l'envoie du formulaire
        $('body').on('submit', 'form[name=davidbundle_city]', function(e){
            //On empeche le rafraichissement de la page
            e.preventDefault();

            //On declenche la requette ajax
            $.ajax({
                url: '{{ path("city_add") }}',
                type: 'POST',
                dataType: "json",
                data: $('form').serialize(),
                success: function (result) {
                    $("tbody").append(
                        "<tr>"+
                            "<td>"+result.name+"</td>"+
                            "<td><a href=\"#\" class=\"city_modify\" data-id="+result.id+" data-toggle=\"modal\" data-target=\"#formModal\"><span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span></a></td>"+
                            "<td><a href=\"#\" class=\"city_delete\" data-id="+result.id+" data-toggle=\"modal\" data-target=\"#formModal\"><span class=\"glyphicon glyphicon-remove\" aria-hidden=\"true\"></span></a></td>"+
                        "</tr>" );
                    $(".success-message").html("{{ 'flash.success.addCity'|trans }}");
                    $('.container-success-message').show();
                    $('.tr_no_city').hide();
                    $('.container-error-message').hide();
                    $('.error-message').hide();
                    console.log(result);
                },
                error: function (result) {
                    $('.error-message').html(result.responseJSON);
                    $('.container-success-message').hide();
                    $('.container-error-message').show();
                    $(".error-form").html("{{ 'flash.error'|trans }}");
                    $('.error-message').show();
                }
            });
        });

        //Suppression d'une ville
        $('body').on('click', '.city_delete', function(e) {
            e.preventDefault();

            $(".modal-body .city_delete_in_modal").show();
            $(".modal-body .city_delete_in_modal").attr("data-id", $(this).attr("data-id"));
            $(this).parent().parent().addClass("toDelete"+$(this).attr("data-id"));
        });

        $('body').on('click', '.city_delete_in_modal', function (e) {
            e.preventDefault();

            var id = $(this).attr("data-id");
            var url = '{{ path("city_delete", {'id':'idToReplace'}) }}';
            url = url.replace("idToReplace", id);
            $.ajax({
                url: url,
                type: 'DELETE',
                success: function () {
                    console.log(this);
                    $('.toDelete'+id).remove();

                    $('.container-success-message').show();
                    $('.container-error-message').hide();
                    $(".success-message").html("{{ 'flash.success.deleteCity'|trans }}");
                    $(".modal-body .city_delete_in_modal").hide();
                }
            });
        })
    </script>
{% endblock %}